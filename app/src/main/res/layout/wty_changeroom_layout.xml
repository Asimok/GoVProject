<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/change"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@drawable/biankuang2"
        android:layout_marginTop="@dimen/dp_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楼  号:"
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_20"
            />
        <EditText
            android:focusable="false"
            android:id="@+id/BuildNumber"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="楼号不可更改"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@drawable/biankuang2"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间号："
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_20"
            />

        <EditText
            android:focusable="false"
            android:id="@+id/RoomNumber"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="房间号不可更改"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@drawable/biankuang2"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开放时间："
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_20"
            />

        <EditText
            android:focusable="false"
            android:id="@+id/Time"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="开放时间不可更改"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@drawable/biankuang2"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="容量："
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_20"
            />

        <EditText
            android:id="@+id/Size"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="请在此输入修改后容量"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@drawable/biankuang2"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能："
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_20"
            />

        <Spinner
            android:id="@+id/Function"
            android:layout_width="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:entries="@array/functions"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@drawable/biankuang2"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低可使用职务："
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_20"
            />
        <Spinner
            android:layout_marginLeft="@dimen/dp_30"
            android:id="@+id/MeetingRomeLevel"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:entries="@array/zhiwei"></Spinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@drawable/biankuang2"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否设为维修："
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_20"
            />
        <CheckBox
            android:layout_marginLeft="@dimen/dp_50"
            android:id="@+id/weixiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为维修"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <Button
            android:onClick="searchroom2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2b2b28"
            android:text="选 择 房 间"
            android:textSize="@dimen/sp_18"
            android:textColor="#ebebe3"/>
        <Button
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2b2b28"
            android:text="保 存 修 改"
            android:textSize="@dimen/sp_18"
            android:textColor="#ebebe3"/>
    </LinearLayout>


</LinearLayout>
