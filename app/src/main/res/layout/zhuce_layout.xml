<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Register.Login"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="员工注册"
        android:textSize="@dimen/sp_25"
        android:paddingTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/dp_50"
            android:paddingTop="@dimen/dp_10"
            android:text="账号:"
            android:textSize="@dimen/sp_20" />

        <EditText
            android:id="@+id/zhanghao"
            android:layout_width="@dimen/dp_254"
            android:layout_height="wrap_content"
            android:hint="请输入员工号"
            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_40"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textSize="@dimen/sp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_50"
            android:layout_gravity="left" />

        <EditText
            android:id="@+id/mima"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_40"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textSize="@dimen/sp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_50"
            android:layout_gravity="left" />

        <EditText
            android:id="@+id/remima"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_40"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名:"
            android:textSize="@dimen/sp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_50"
            android:layout_gravity="left" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"

            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_40"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/dp_50"
            android:paddingTop="@dimen/dp_5"
            android:text="性别:"
            android:textSize="@dimen/sp_20" />

        <RadioGroup
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/Sex">

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/man"
                android:text="男" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/woman"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/dp_50"
            android:paddingTop="@dimen/dp_5"
            android:text="电话:"
            android:textSize="@dimen/sp_20" />

        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="请输入电话号码"

            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_40" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/dp_50"
            android:paddingTop="@dimen/dp_5"
            android:text="邮箱:"
            android:textSize="@dimen/sp_20" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="请输入邮箱"

            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_40" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/dp_50"
            android:paddingTop="@dimen/dp_5"
            android:text="部门:"
            android:textSize="@dimen/sp_20" />

        <EditText
            android:id="@+id/Ministry"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="请输入职位"

            android:paddingLeft="@dimen/dp_40"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_40" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5">

        <Button
            android:id="@+id/zhuce"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#5893d4"
            android:onClick="login"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="注册"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>


</LinearLayout>