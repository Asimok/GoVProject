    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/biankuang2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:text="容量："
            android:textSize="@dimen/sp_20" />

        <EditText
            android:id="@+id/Size"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_65"
            android:background="#00000000"
            android:hint="请在此输入容量" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/biankuang2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:text="功能："
            android:textSize="@dimen/sp_20" />

        <Spinner
            android:id="@+id/function"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dp_130"
            android:entries="@array/functions1"
            android:gravity="right"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/biankuang2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:text="最低可使用职务："
            android:textSize="@dimen/sp_20" />

        <Spinner
            android:id="@+id/MeetingRomeLevel"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:entries="@array/zhiwei"></Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2b2b28"
            android:text="保 存"
            android:textColor="#ebebe3"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>


