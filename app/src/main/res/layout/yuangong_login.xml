<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Register.Login"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@drawable/icon3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="50dp"
            android:paddingTop="40dp"
            android:text="账号:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/zhanghao"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:hint="请输入员工号"
            android:paddingLeft="40dp"
            android:paddingTop="40dp"
            android:paddingRight="40dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textSize="20sp"
            android:paddingTop="30dp"
            android:paddingLeft="50dp"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/mima"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="40dp"
            android:paddingTop="30dp"
            android:paddingRight="40dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="check"
            android:text="记住密码"
            />

        <TextView
            android:onClick="forgetmima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="120dp"
            android:text="忘记密码" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/login"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#2B2B28"
            android:onClick="login"
            android:text="登录"
            android:textColor="#EBEBE3" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="当日"
            android:background="#ffc55c"
            android:onClick="mainintrefaceToday"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/room"
            android:text="会议室"
            android:background="#ffc55c"
            android:onClick="room"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="当时"
            android:background="#ffc55c"
            android:onClick="mainintrefaceNow"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp">

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="主界面"
            android:background="#ffc55c"
            android:onClick="main"
            />
            <Button
                android:layout_marginLeft="50dp"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="TAB"
                android:background="#ffc55c"
                android:onClick="QQ"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:paddingLeft="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="130dp"
            android:layout_height="50dp"
android:gravity="center_vertical"
            android:textSize="15sp"
            android:text="还没有账户？"
            android:textColor="#2B2B28"
            android:layout_marginLeft="100dp"
            android:id="@+id/n1"
            />
        <Button
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/n1"
            android:id="@+id/zhuce"
            android:onClick="zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="注册"
            android:textColor="#2B2B28"/>


    </RelativeLayout>


</LinearLayout>